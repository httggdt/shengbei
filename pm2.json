{
  "apps": [
    {
      "name": "app_shengbei",
      "script": "./build/main.js",
      "env": {
        "NODE_ENV": "production"
      },
      "env_production": {
        "NODE_ENV": "production"
      },
      "instances": 4,
      "exec_mode": "cluster",
      "max_restarts" : 3,
      "max_memory_restart": "300M",
      "restart_delay" : 5000,
      "log_date_format" : "YYYY-MM-DD HH:mm Z",
      "combine_logs" : true,
      "watch": ["./build/main.js"],
    }
  ]
}
